<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/general_padding_small"
    android:weightSum="1">

    <ImageView
        android:id="@+id/review_left_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/top_padding_small"
        android:tint="@color/darker_grey" />

    <android.support.v7.widget.CardView
        android:id="@+id/review_card_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:elevation="@dimen/card_elevation"
        android:padding="@dimen/general_padding_small"
        card_view:cardCornerRadius="@dimen/card_radius"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/review_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/general_padding_small"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_thickness"
                android:background="@color/stroke" />

            <TextView
                android:id="@+id/review_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_small"
                android:padding="@dimen/general_padding_small" />

            <ImageView
                android:id="@+id/review_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:foregroundGravity="center_horizontal"
                android:paddingLeft="@dimen/left_padding_small"
                android:src="@drawable/ic_keyboard_arrow_down_white_24dp"
                android:tint="@color/darker_grey" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <ImageView
        android:id="@+id/review_right_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/top_padding_small"
        android:tint="@color/darker_grey" />
</LinearLayout>

